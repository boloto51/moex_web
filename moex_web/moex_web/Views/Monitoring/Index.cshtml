@model List<MonitoringModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table table-bordered">
    <tr>
        <td>
            <b>SecId</b>
        </td>
        <td>
            <b>InitClose</b>
        </td>
        <td>
            <b>CurrentClose</b>
        </td>
        <td>
            <b>Percent</b>
        </td>
    </tr>
    @if (Model.Count != 0)
    {
        @for (int i = 0; i <= (Model.Count < 100 ? Model.Count : 100); i++)
        {
            <tr>
                <td>
                    @Model[i].SecId
                </td>
                <td>
                    @Model[i].InitClose
                </td>
                <td>
                    @Model[i].CurrentClose
                </td>
                <td>
                    @Model[i].Percent
                </td>
            </tr>
        }
    }
