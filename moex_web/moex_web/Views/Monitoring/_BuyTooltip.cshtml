<div class="buy-tooltip-wrapper hidden-element">
    <div class="buy-tooltip">
        <label class="title"></label>
        <div class="input-group date" data-provide="datepicker">
            <!--<label>Buy date</label>-->
            <input type="text" class="form-control date-input">
            <div class="input-group-addon">
                <span class="glyphicon glyphicon-th"></span>
            </div>
        </div>
        <div class="input-group price">
            <!--<label>Price</label>-->
            <input type="number" class="form-control price-input" placeholder="Price">
        </div>
        <div class="input-group number">
            <!--<label>Number</label>-->
            <input type="number" class="form-control number-input" placeholder="Lot count">
        </div>
        <div class="manage-buttons">
            <button class="manage-buttons confirm">Accept</button>
            <button class="manage-buttons cancel">Cancel</button>
        </div>
    </div>
</div>
